<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="uk.co.digitme.machinemonitoring">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/graphscreenshot"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/graphscreenshot_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".Default.JobInProgressActivity" />
        <activity
            android:name=".Default.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pausable.JobPausedActivity" />
        <activity android:name=".Pausable.SettingInProgressActivity" />
        <activity android:name=".Pausable.JobInfoActivity" />
        <activity android:name=".Pausable.JobNumberActivity" />
        <activity android:name=".Pausable.JobInProgressActivity" />
        <activity android:name=".DataEntryActivity" />
        <activity android:name=".SettingsActivity" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>